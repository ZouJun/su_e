      <su-input type="text" label='<%= t "activerecord.attributes.department.d_password" %>'           name="department[d_password]" value="<%= @department.d_password %>"></su-input>
      <su-input type="text" label='<%= t "activerecord.attributes.department.academy" %>'           name="department[academy]" value="<%= @department.academy %>"></su-input>
      <su-input type="text" label='<%= t "activerecord.attributes.department.major" %>'           name="department[major]" value="<%= @department.major %>"></su-input>
      <su-input type="number" label='<%= t "activerecord.attributes.department.age" %>'           name="department[age]" value="<%= @department.age %>"></su-input>
      <su-input type="text" label='<%= t "activerecord.attributes.department.sex" %>'           name="department[sex]" value="<%= @department.sex %>"></su-input>
      <su-input type="text" label='<%= t "activerecord.attributes.department.email" %>'           name="department[email]" value="<%= @department.email %>"></su-input>
      <su-input type="text" label='<%= t "activerecord.attributes.department.address" %>'           name="department[address]" value="<%= @department.address %>"></su-input>
      <su-input type="text" label='<%= t "activerecord.attributes.department.telephone" %>'           name="department[telephone]" value="<%= @department.telephone %>"></su-input>
      <su-input type="number" label='<%= t "activerecord.attributes.department.d_power" %>'           name="department[d_power]" value="<%= @department.d_power %>"></su-input>

