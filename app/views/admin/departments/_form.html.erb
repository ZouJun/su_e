  <input type="hidden" name="_method" value="<%= form_method @department %>">

  <%= form_validate @department %>
      <su-input type="text" label='<%= t "activerecord.attributes.department.d_number" %>' autofocus          name="department[d_number]" value="<%= @department.d_number %>"></su-input>
