<div id="admin_roles">
  <p>
    <a href="<%= new_admin_role_path %>" class="btn btn-success btn-sm">
      <su-icon icon="plus" color="#fff" fix-width></su-icon>新增
    </a>
  </p>
  <%= grid(@roles, show_filters: :when_filtered) do |g|
    #g.action_column param_name: :select_ids, object_property: :id
    g.column name: "<i class='fa fa-asterisk fa-fw'></i>#{t 'activerecord.attributes.defaults.id'}", attribute: 'id', filter: false, ordering: true
    g.column name: "#{t 'activerecord.attributes.role.name'}", attribute: 'name' do |c|
      link_to c.name, admin_role_path(c.id), class: :pjax
    end
    g.column name: "#{t 'activerecord.attributes.role.position'}", attribute: 'position'
            # g.column name: "#{t 'activerecord.attributes.role.permissions'}", assoc: :permissions, attribute: 'name' do |c|
            #   c.permissions.name if c.permissions_id.present?
            # end

    g.column do |c|
      grid_operator(:admin_role_path, c.id)
    end
  end %>
</div>
