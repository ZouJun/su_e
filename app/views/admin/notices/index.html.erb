<div id="admin_notices">
  <p>
    <a href="<%= new_admin_notice_path %>" class="btn btn-success btn-sm">
      <su-icon icon="plus" color="#fff" fix-width></su-icon>新增
    </a>
  </p>
  <%= grid(@notices, show_filters: :when_filtered) do |g|
    #g.action_column param_name: :select_ids, object_property: :id
    g.column name: "<i class='fa fa-asterisk fa-fw'></i>#{t 'activerecord.attributes.defaults.id'}", attribute: 'id', filter: false, ordering: true
            g.column name: "#{t 'activerecord.attributes.notice.n_title'}", attribute: 'n_title'
            g.column name: "#{t 'activerecord.attributes.notice.n_content'}", attribute: 'n_content'
            g.column name: "#{t 'activerecord.attributes.notice.unit'}", attribute: 'unit'
            g.column name: "#{t 'activerecord.attributes.notice.n_type'}", attribute: 'n_type'
            g.column name: "#{t 'activerecord.attributes.notice.n_tags'}", attribute: 'n_tags'
            g.column name: "#{t 'activerecord.attributes.notice.views'}", attribute: 'views'

    g.column do |c|
      grid_operator(:admin_notice_path, c.id)
    end
  end %>
</div>
<script type="text/javascript" data-turbolinks-eval="true">
  new Vue({
    el: "#admin_notices"
  })
</script>