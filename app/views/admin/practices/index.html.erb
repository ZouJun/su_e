<div id="admin_practices">
  <p>
    <a href="<%= new_admin_practice_path %>" class="btn btn-success btn-sm">
      <su-icon icon="plus" color="#fff" fix-width></su-icon>新增
    </a>
  </p>
  <%= grid(@practices, show_filters: :when_filtered) do |g|
    #g.action_column param_name: :select_ids, object_property: :id
    g.column name: "<i class='fa fa-asterisk fa-fw'></i>#{t 'activerecord.attributes.defaults.id'}", attribute: 'id', filter: false, ordering: true
            g.column name: "#{t 'activerecord.attributes.practice.p_name'}", attribute: 'p_name'
            g.column name: "#{t 'activerecord.attributes.practice.post'}", attribute: 'post'
            g.column name: "#{t 'activerecord.attributes.practice.address'}", attribute: 'address'
            g.column name: "#{t 'activerecord.attributes.practice.telephone'}", attribute: 'telephone'
            g.column name: "#{t 'activerecord.attributes.practice.memento'}", attribute: 'memento'

    g.column do |c|
      grid_operator(:admin_practice_path, c.id)
    end
  end %>
</div>
<script type="text/javascript" data-turbolinks-eval="true">
  new Vue({
    el: "#admin_practices"
  })
</script>